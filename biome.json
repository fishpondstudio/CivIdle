{
   "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
   "organizeImports": {
      "enabled": true
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "a11y": { "all": false },
         "performance": { "noDelete": "warn" },
         "style": { "useSelfClosingElements": "off", "noNonNullAssertion": "warn" },
         "complexity": { "noForEach": "warn" }
      }
   },
   "formatter": { "lineWidth": 100, "indentStyle": "space", "indentWidth": 3 }
}
